{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "k1-block-theme/text-callout",
  "title": "Text Callout",
  "category": "k1-blocks",
  "description": "Block that allows for big text callouts",
  "textdomain": "kingdom_one",
  "supports": {
    "color": {
      "text": true,
      "heading": true,
      "background": false
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true
    },
    "align": [
      "left",
      "center",
      "right"
    ]
  },
  "attributes": {
    "headline": {
      "type": "string"
    },
    "align": {
      "type": "string",
      "default": "center"
    }
  },
  "editorScript": "file:./index.js",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}