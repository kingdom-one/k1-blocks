{
	"$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/block.json",
	"apiVersion": 3,
	"name": "k1-block-theme/hero",
	"title": "Hero Section",
	"category": "k1-blocks",
	"description": "The hero container",
	"textdomain": "kingdom_one",
	"supports": {
		"align": [
			"full"
		],
		"color": {
			"text": false,
			"background": false
		}
	},
	"attributes": {
		"bottomBar": {
			"type": "boolean",
			"default": false
		},
		"icons": {
			"type": "array",
			"default": [
				{
					"value": "hr",
					"label": "HR"
				},
				{
					"value": "finance",
					"label": "Finance"
				},
				{
					"value": "marcom",
					"label": "Marketing & Communications"
				},
				{
					"value": "staffing",
					"label": "Business Administration"
				}
			]
		},
		"iconColor": {
			"type": "string",
			"default": "white"
		},
		"align": {
			"type": "string",
			"default": "full"
		},
		"backgroundColor": {
			"type": "string",
			"default": "#00644b"
		},
		"hasBackgroundImage": {
			"type": "boolean",
			"default": false
		},
		"backgroundImage": {
			"type": "string",
			"default": ""
		},
		"colorDirection": {
			"type": "string",
			"enum": [
				"left",
				"right"
			],
			"default": "right"
		},
		"leaves": {
			"type": "string",
			"default": "3"
		},
		"headline": {
			"type": "string"
		},
		"headlineColor": {
			"type": "string",
			"default": "white"
		},
		"subheadline": {
			"type": "string"
		},
		"subheadlineColor": {
			"type": "string",
			"default": "white"
		},
		"pageTitle": {
			"type": "string"
		}
	},
	"editorScript": "file:./index.js",
	"style": "file:./index.css",
	"render": "file:./render.php"
}