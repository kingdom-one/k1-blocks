{
	"$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/block.json",
	"apiVersion": 3,
	"name": "k1-block-theme/hero",
	"title": "Hero Section",
	"category": "k1-blocks",
	"description": "The hero container",
	"textdomain": "kingdom_one",
	"supports": {
		"align": true,
		"color": {
			"text": false,
			"background": true
		},
		"spacing": {
			"padding": true,
			"margin": true
		}
	},
	"attributes": {
		"align": {
			"type": "string",
			"default": "full"
		},
		"hasBackgroundImage": {
			"type": "boolean",
			"default": false
		},
		"backgroundImage": {
			"type": "string",
			"default": ""
		},
		"colorDirection": {
			"type": "string",
			"enum": [ "left", "right" ],
			"default": "right"
		}
	},
	"editorScript": "file:./index.js",
	"style": [ "file:./style-index.css" ]
}
